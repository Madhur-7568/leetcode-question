#include <vector>
#include <string>
using namespace std;

class Solution {
public:
    vector<string> fizzBuzz(int n) {
        vector<string>ans;
/////////////////////////////////////////////////////
        //METHOD-1
        for(int idx=1;idx<=n;idx++){
            if(idx%3==0 && idx%5==0){
               ans.push_back("FizzBuzz");
            }
            else if(idx%3==0){
                ans.push_back("Fizz");
            }
            else if(idx%5==0){
                ans.push_back("Buzz");
            }
            else{
                 ans.push_back(to_string(idx));
            }
        }

/////////////////////////////////////////////////////


    //     //METHOD-2
      int count3=0 ;
      int count5=0;
      for(int i=1;i<=n;i++){
          count3++;
            count5++;
        if(count3==3 && count5==5){
          ans.push_back("FizzBuzz");
            count3=0;
            count5=0;
        }
        else if(count3==3){
              ans.push_back("Fizz");
            count3=0;
        }
        else if(count5==5){
             ans.push_back("Buzz");
            count5=0;
        }
          else{
                  ans.push_back(to_string(i));
            }
      }
    return ans;
    }
    
};
