class Solution {
public:
    bool isPalindrome(int x) {
       long int curr=x;
        long int rev=0;
        if(x<0){
            return false;
        }
        
            while(x!=0){
                int rem=x%10;
                rev=rev*10+rem;
                x=x/10;
            }
            if(curr==rev){
                return true;
            }
        
        return false;
    }
};
