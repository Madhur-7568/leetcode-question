class Solution {
public:
    double myPow(double x, long long n) {
        long double ans;
        if(n<0){
            x= 1/x;
           n=-n;
        }
        if(n==0){
            return 1;
        }
        else if(n==1){
            return x;
        }
        long double a=myPow(x,n/2);
     if(n%2==0){
          ans= a*a;
        }
       else if(n%2!=0){
        ans=a*a*x;
       }
        return ans;
    }
};
