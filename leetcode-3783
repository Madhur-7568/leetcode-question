class Solution {
public:
    int rev( int n){
        int num=0;
        while(n>0){
            int rem=n%10;
            num=num*10+rem;
            n=n/10;
        }
        return num;
    }
    int abs(int n){
        int m= n-rev(n);
        if(m<0){
            return -m;
        }
        return m;
    }
    int mirrorDistance(int n) {
       return abs(n);
    }
};
